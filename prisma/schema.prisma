generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RawNews {
  id             String          @id @default(cuid())
  title          String
  content        String
  source         String
  category       String
  summarizedNews SummarizedNews?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model SummarizedNews {
  id         String   @id @default(cuid())
  title      String
  content    String
  tags       String[]
  categories String[]
  mood       String?
  score      Float?
  rawNews    RawNews  @relation(fields: [rawNewsId], references: [id])
  rawNewsId  String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
